{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "baseUrl": ".",
        "allowJs": true,
        "declaration": true,
        "outDir": "./lib",
        "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
